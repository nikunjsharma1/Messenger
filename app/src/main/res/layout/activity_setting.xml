<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingActivity"
    android:background="@color/background">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/back_arrow"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/AddProfile"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:src="@drawable/profile"
            />
        <ImageView
            android:id="@+id/plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/plus"
         android:layout_marginTop="-25dp"
           android:layout_marginLeft="29dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/userName_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:hint="Enter Username"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/about_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:hint="About"
                />
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save_button"
            android:backgroundTint="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:padding="5dp"
            app:cornerRadius="10dp"
            android:textColor="@color/black"
            android:text="Save"
            android:layout_gravity="right"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:background="@drawable/setting_bg"
    android:padding="40dp"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:drawableLeft="@drawable/ic_baseline_policy_24"
        android:drawablePadding="10dp"
        android:padding="8dp"
        android:text="Privacy Policy"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:drawableTint="@color/background" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:drawableLeft="@drawable/about"
        android:drawablePadding="10dp"
        android:padding="8dp"
        android:text="About Us"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:drawableTint="@color/background" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:drawableLeft="@drawable/ic_baseline_people_24"
        android:drawablePadding="10dp"
        android:padding="8dp"
        android:text="Invite a Friend"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:drawableTint="@color/background" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:drawableLeft="@drawable/ic_baseline_notifications_active_24"
        android:drawablePadding="10dp"
        android:padding="8dp"
        android:text="Notification"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:drawableTint="@color/background" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:drawableLeft="@drawable/ic_baseline_help_24"
        android:drawablePadding="10dp"
        android:padding="8dp"
        android:text="Help"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:drawableTint="@color/background" />
</LinearLayout>
</RelativeLayout>